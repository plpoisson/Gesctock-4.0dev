@model Nop4you.Plugin.Misc.SqlReport.Models.FilterModel
@{
    //page title
    ViewBag.Title = T("Nop4you.Plugin.Misc.SqlReport.SqlManager.Filter.Edit").Text;
    Layout = "~/Plugins/Misc.SqlReport/Views/_ConfigurePluginWorkaround.cshtml";
    Html.SetActiveMenuItemSystemName("sqlreport");
}
@using Nop.Web.Framework.UI;
@using (Html.BeginForm())
{
    <div class="content-header clearfix">

        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue" onclick="saveGrid(); return true;">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue" onclick="saveGrid(); return true;">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>

        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">

                <div class="panel panel-default">
                    @if (Nop4you.Plugin.Misc.SqlReport.n4yPlugin.TrialVersion)
                {
                        <div class="panel-heading">
                            SQL Report Trial version. To buy full version go to our <a href="https://www.nop4you.com/nopcommerce-sql-report-plugin" target="_blank">store</a>
                        </div>
                    }

                    <div class="panel-body">
                        @Html.Partial("~/Plugins/Misc.SqlReport/Views/Admin/LeftSideMenu.cshtml")
                        <div class="nop4u-settings">


                            @Html.AntiForgeryToken()
                            <div class="nop4u-menu-header">
                                <div class="title">
                                    @T("Nop4you.Plugin.Misc.SqlReport.Filter.Edit") <a href="@Url.RouteUrl("Nop4you.Plugin.Misc.SqlReport.FilterManager")">
                                        @T("Nop4you.Plugin.Misc.SqlReport.Filter.BackToList")
                                    </a>
                                </div>
                            </div>
                            @Html.Partial("~/Plugins/Misc.SqlReport/Views/Admin/_CreateOrUpdateFilter.cshtml", Model)


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}