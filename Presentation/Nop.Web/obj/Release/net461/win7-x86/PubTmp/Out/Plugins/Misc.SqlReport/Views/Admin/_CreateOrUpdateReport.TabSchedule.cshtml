@model Nop4you.Plugin.Misc.SqlReport.Models.ReportModel
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@using Nop.Web.Framework;
@using Nop.Web.Framework.UI;
@using Nop.Services;

<div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="Enabled" />
        </div>
        <div class="col-md-9">
            @Html.EditorFor(model => model.Enabled)
            @Html.ValidationMessageFor(model => model.Enabled)
            <br />
            <em>
                @T("nop4you.plugin.misc.sqlreport.text5")
            </em>
        </div>
    </div>
</div>

<div id="tabScheduled">
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="OccursId" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="OccursId" asp-items="((Nop4you.Plugin.Misc.SqlReport.Models.OccursEnum)Model.OccursId).ToSelectList()" />
            @Html.ValidationMessageFor(model => model.OccursId)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            &nbsp;
        </div>
        <div class="col-md-9">
            <span id="trHours">
                @T("Nop4you.Plugin.Misc.SqlReport.Report.OccursOnceAtHour")
                @Html.EditorFor(model => model.OccursOnceAtHour)
            </span>
            @T("Nop4you.Plugin.Misc.SqlReport.Report.OccursOnceAtMinute")
            @Html.EditorFor(model => model.OccursOnceAtMinute)
        </div>
    </div>
    <div class="form-group" id="trOccursDay">
        <div class="col-md-3">
            <nop-label asp-for="OccursDay" />
        </div>
        <div class="col-md-9">
            @Html.EditorFor(model => model.OccursDay)
            @Html.ValidationMessageFor(model => model.OccursDay)
        </div>
    </div>

    <div class="form-group" id="trMonthOnTheFirstDayOfWeek">
        <div class="col-md-3">
            <nop-label asp-for="MonthOnTheFirstDayOfWeek" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="MonthOnTheFirstDayOfWeek" asp-items="((System.DayOfWeek)Model.MonthOnTheFirstDayOfWeek).ToSelectList()" />
            @Html.ValidationMessageFor(model => model.MonthOnTheFirstDayOfWeek)
        </div>
    </div>


    <div class="form-group" id="trDayOfWeek">
        <div class="col-md-3">
            @T("Nop4you.Plugin.Misc.SqlReport.Report.DayOfWeek")
        </div>
        <div class="col-md-9">
            @T("Nop4you.Plugin.Misc.SqlReport.Report.DayOfWeekMonday")
            @Html.EditorFor(model => model.DayOfWeekMonday)

            @T("Nop4you.Plugin.Misc.SqlReport.Report.DayOfWeekTuesday")
            @Html.EditorFor(model => model.DayOfWeekTuesday)

            @T("Nop4you.Plugin.Misc.SqlReport.Report.DayOfWeekWednesday")
            @Html.EditorFor(model => model.DayOfWeekWednesday)

            @T("Nop4you.Plugin.Misc.SqlReport.Report.DayOfWeekThursday")
            @Html.EditorFor(model => model.DayOfWeekThursday)

            @T("Nop4you.Plugin.Misc.SqlReport.Report.DayOfWeekFriday")
            @Html.EditorFor(model => model.DayOfWeekFriday)

            @T("Nop4you.Plugin.Misc.SqlReport.Report.DayOfWeekSaturday")
            @Html.EditorFor(model => model.DayOfWeekSaturday)

            @T("Nop4you.Plugin.Misc.SqlReport.Report.DayOfWeekSunday")
            @Html.EditorFor(model => model.DayOfWeekSunday)

        </div>
    </div>


</div>
<hr />

<div id="tabEmail">
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="EmailTo" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EmailTo" />
            @Html.ValidationMessageFor(model => model.EmailTo)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="EmailReplyTo" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EmailReplyTo" />
            @Html.ValidationMessageFor(model => model.EmailReplyTo)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="EmailCC" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EmailCC" />
            @Html.ValidationMessageFor(model => model.EmailCC)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="EmailSubject" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EmailSubject" />
            @Html.ValidationMessageFor(model => model.EmailSubject)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="EmailBody" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.EmailBody, "RichEditor")
            @Html.ValidationMessageFor(model => model.EmailBody)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="EmailPriority" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="EmailPriority" asp-items="((Nop.Core.Domain.Messages.QueuedEmailPriority)Model.EmailPriority).ToSelectList()" />
            @Html.ValidationMessageFor(model => model.EmailPriority)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="EmailAccountId" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="EmailAccountId" asp-items="Model.AvailableEmailAccount" />
            @Html.ValidationMessageFor(model => model.EmailAccountId)
        </div>
    </div>

</div>
