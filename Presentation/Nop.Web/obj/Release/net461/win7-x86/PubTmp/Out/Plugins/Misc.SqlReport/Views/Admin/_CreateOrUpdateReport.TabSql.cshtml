@model Nop4you.Plugin.Misc.SqlReport.Models.ReportModel
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@using Nop.Web.Framework;
@using Nop.Web.Framework.UI;
@using Nop.Services;

<div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="AvailableFilters" />
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.AvailableFilters, new { style = "width:100%", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="Sql" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.TextAreaFor(x => x.Sql, new { style = "Width: 100%; Height: 350px;" })
            @Html.ValidationMessageFor(model => model.Sql)
        </div>
    </div>

</div>