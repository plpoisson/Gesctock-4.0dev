@using Nop.Core;

@inject IWorkContext workContext

@{
    var supportRtl = workContext.WorkingLanguage.Rtl;

    var userAgent = Url.ActionContext.HttpContext.Request.Headers["User-Agent"];
    var isIeEightOrLess = false;
    if (!String.IsNullOrEmpty(userAgent) && userAgent.ToString().ToLower().IndexOf("MSIE 8.0", StringComparison.InvariantCultureIgnoreCase) > 0)
    {
        isIeEightOrLess = true;
    }
    if (isIeEightOrLess)
    {
        Html.AppendCssFileParts("~/Themes/Motion/Content/css/ie8-fix.css");
    }
    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");
    var isSafari = false;
    if (!String.IsNullOrEmpty(userAgent) && (userAgent.ToString().ToLower().IndexOf("Safari", StringComparison.InvariantCultureIgnoreCase) > 0))
    {
        isSafari = true;
    }
    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/forum.rtl.css");
        Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/1280.rtl.css");
        Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/1024.rtl.css");
        Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/mobile-only.rtl.css");
        Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/tables.rtl.css");
    }
    Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/forum.css");
    Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/1280.css");
    Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/1024.css");
    Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/768.css");
    Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/480.css");
    Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/mobile-only.css");
    Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/tables.css");

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/styles.rtl.css");
    }
    Html.AppendCssFileParts("~/Themes/Motion/Content/CSS/styles.css");

    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.ex.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/footable.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js");
    if (isIeEightOrLess)
    {
        Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/selectivizr.min.js");
        Html.AddScriptParts(ResourceLocation.Footer, "~/Plugins/SevenSpikes.Core/Scripts/respond.min.js");
    }
    Html.AddScriptParts(ResourceLocation.Footer, "~/Themes/Motion/Content/scripts/Motion.js");
}