@model Iclic.Widgets.EnVedette.Models.PublicInfoModel

@{
    Layout = "";
}

@if (Model.EnVedette.Count > 0)
{
    <div class="product-grid home-page-product-grid">
        <div class="title">
            <strong>@T("HomePage.EnVedette")</strong>
        </div>
        <div class="item-grid">
            @foreach (var item in Model.EnVedette)
            {
                <div class="item-box">
                    @Html.Partial("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}


